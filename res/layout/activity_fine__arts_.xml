<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_btn_seagull"
    android:orientation="vertical" >
    
   				 <Button
                android:id="@+id/t"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:background="@drawable/custom_btn_genoa"
                android:gravity="center"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="I unit: Faculty of Fine Arts depts\n(New Faculty from-2016)"
                android:textColor="@android:color/background_dark"
                android:textSize="22sp" >
            </Button>
    
    
    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/GD"
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:background="@drawable/nice_button"
                android:gravity="center"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="1.Graphics Design\n(গ্রাফিক ডিজাইন,কারুশিল্প ও শিল্পকলার ইতিহাস)\nআসন সংখ্যা  ৪৫"
                android:textColor="@android:color/white"
                android:textSize="18sp" >
            </Button>
 

            <Button
                android:id="@+id/ice"
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:background="@drawable/custom_btn_orange"
                android:gravity="center"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="2.Printing Eastern Art and Chapacita\n(চিত্রকলা, প্রাচ্যকলা ও ছাপচিত্র)\nআসন সংখ্যা ৪৫ "
                android:textColor="@android:color/white"
                android:textSize="18sp" >
            </Button>

            <Button
                android:id="@+id/acce"
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:background="@drawable/nice_button"
                android:gravity="center"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="3.Pottery and Sculpture\n(মৃৎশিল্প ও ভাস্কর্য)\nআসন সংখ্যা  ৩০ "
                android:textColor="@android:color/white"
                android:textSize="18sp" >
            </Button>

          
            
        </LinearLayout>

    </ScrollView>

     

</LinearLayout>